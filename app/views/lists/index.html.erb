<p id="notice"><%= notice %></p>
<h1>Listing Lists</h1>

<%= form_tag lists_path, :method => 'get', :id => "lists_search", :remote => :true do %>
  <p>
    <%= text_field_tag :search, params[:search], :id => 'lists_searchs' %>
    <%= submit_tag "Search", :name => nil, :class => 'searchs' %>
  </p>
<div id="lists"><%= render 'lists' %></div>
<% end %>
<%= will_paginate @lists, renderer: BootstrapPagination::Rails  %>
<div class="btns">
<%= link_to new_list_path, class: 'btn btn-success btn-xs' do %>
  <i class="glyphicon glyphicon-plus"></i> New List
<% end %>
<%= link_to 'Send Mail', send_email_path,  class: 'btn btn-warning btn-xs mail' %>
</div>
